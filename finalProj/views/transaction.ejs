<%include partials/header.ejs %>
<h2>Shopping Cart:</h2>
<div class="table-wrapper">
    <% if (Buys.length > 0 ) { %>
      <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>

                <th scope="col">Item Type</th>
                <th scope="col"> Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">ItemName</th>
                <th scope="col">Seller ID</th>
            </tr>
        </thead>

      <tbody>
          <% Buys.forEach((item, index) => { %>
          <tr>
              <th scope="row"><%= item.ItemId %></th>


              <td><%= item.ItemType %></td>
                <td>$<%= item.Price%></td>
              <td><%= item.Quantity %></td>
              <td><%= item.ItemName %></td>
              <td><%= item.SellerId %></td>
          </tr>
          <%} )%>
      </tbody>
  </table>
  <% } else { %>
  <p class="text-center">No Items found. </p>
  <% } %>
</div>
<a class="float-left" href="/purchase" title="Purchase" style="font-size: 16px; ">Purchase</a><br><br>
<h2>Purchased:</h2>
<div class="table-wrapper">
    <% if (Purchase.length > 0) { %>
      <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>

                <th scope="col">Item Type</th>
                <th scope="col"> Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">ItemName</th>
                <th scope="col">Seller ID</th>
            </tr>
        </thead>

      <tbody>
          <% Purchase.forEach((i, index) => { %>
          <tr>
              <th scope="row"><%= i.ItemId %></th>


              <td><%= i.ItemType %></td>
                <td>$<%= i.Price%></td>
              <td><%= i.Quantity %></td>
              <td><%= i.ItemName %></td>
              <td><%= i.SellerId %></td>
          </tr>
          <%} ) %>
      </tbody>
  </table>
  <% } else { %>
  <p class="text-center">No Items found. </p>
  <% } %>
</div>

